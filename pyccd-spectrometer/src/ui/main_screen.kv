<contents of /pyccd-spectrometer/pyccd-spectrometer/src/ui/main_screen.kv>
<Screen>:
    name: 'main_screen'
    
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        
        Label:
            text: 'Welcome to the PyCCD Spectrometer'
            font_size: '20sp'
            size_hint_y: None
            height: 50
            
        Button:
            text: 'Start Measurement'
            size_hint_y: None
            height: 50
            on_press: app.start_measurement()
        
        Button:
            text: 'Settings'
            size_hint_y: None
            height: 50
            on_press: app.open_settings()
        
        Button:
            text: 'Exit'
            size_hint_y: None
            height: 50
            on_press: app.stop()